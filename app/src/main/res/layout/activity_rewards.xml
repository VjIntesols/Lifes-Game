<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:williamchart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rewards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ececec"
            android:clipToPadding="false"
            android:paddingBottom="100dp"></android.support.v7.widget.RecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_reward_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:backgroundTint="@color/lightThemeColorPrimary"
            williamchart:srcCompat="@drawable/add"
            android:tint="@android:color/white"
            app:borderWidth="0dp" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
