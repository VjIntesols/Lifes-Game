<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58C6F0"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.5">

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="TODO Type"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sliderAndPoints_layout"
                android:layout_marginBottom="13dp"
                android:hint="Title"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTitle"
                android:layout_marginBottom="20dp"
                android:gravity="top|left"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/btn_user_accept_goal_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDescription"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="#9BC53D"
                android:gravity="center"
                android:padding="10dp"
                android:text="Add Goal or Task"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinner1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skill Type"
                    android:textColor="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/healthExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingTop="5dp"
                    android:text="Health and Exercise" />

                <CheckBox
                    android:id="@+id/work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingTop="5dp"
                    android:text="Work" />

                <CheckBox
                    android:id="@+id/school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingTop="5dp"
                    android:text="School" />

                <CheckBox
                    android:id="@+id/familyFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingTop="5dp"
                    android:text="Family and Friends" />

                <CheckBox
                    android:id="@+id/learning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout"
                    android:checked="false"
                    android:paddingTop="5dp"
                    android:text="Learning" />

                <CheckBox
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/checkBox2"
                    android:checked="false"
                    android:paddingTop="5dp"
                    android:text="Other" />

                <LinearLayout
                    android:id="@+id/endDateHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/endDateTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="End Date"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/silverLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="15dp"
                android:text="Silver Amount"
                android:textColor="@color/colorAccent" />

            <RelativeLayout
                android:id="@+id/sliderAndPoints_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/silverLabel"
                android:layout_marginBottom="10dp"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/silver_amount_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="0" />

                <SeekBar
                    android:id="@+id/silver_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/silver_amount_text_view"
                    android:max="100"
                    android:maxHeight="2dip" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>