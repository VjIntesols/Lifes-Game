<?xml version="1.0" encoding="utf-8"?>
<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:williamchart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58C6F0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/completionPercentageGraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/todoCompTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="TODOs Completion Percentage"
                    android:textColor="#ffffff" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/todoCompTV"
                    android:layout_centerHorizontal="true">

                    <com.timqi.sectorprogressview.ColorfulRingProgressView
                        android:id="@+id/compToDoGraph"
                        android:layout_width="350px"
                        android:layout_height="350px"
                        app:bgColor="#e1e1e1"
                        app:fgColorEnd="#00a4ff"
                        app:fgColorStart="#02fef1"
                        app:percent="0"
                        app:startAngle="0"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:id="@+id/tvCompToDo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="75"
                        android:textColor="#000"
                        android:textSize="34sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/todoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Total TODOs Completed This Week"
                    android:textColor="#ffffff" />

                <com.db.chart.view.LineChartView
                    android:id="@+id/mainChart"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@+id/todoTV"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15dp"
                    android:padding="13dp"
                    williamchart:chart_axis="false"
                    williamchart:chart_labelColor="#ffffff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout">

                <TextView
                    android:id="@+id/silverTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Total Silver This Week"
                    android:textColor="#ffffff" />

                <com.db.chart.view.LineChartView
                    android:id="@+id/silverChart"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@+id/silverTV"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15dp"
                    android:padding="13dp"
                    williamchart:chart_axis="false"
                    williamchart:chart_labelColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2">

                <TextView
                    android:id="@+id/xpImprovTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Total XP per Improvement Type"
                    android:textColor="#ffffff" />

                <com.db.chart.view.BarChartView
                    android:id="@+id/improvementTypesChart"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@+id/xpImprovTV"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15dp"
                    android:padding="13dp"
                    williamchart:chart_axis="false"
                    williamchart:chart_barSpacing="20dp"
                    williamchart:chart_cornerRadius="2dp"
                    williamchart:chart_fontSize="7dp"
                    williamchart:chart_labelColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>
