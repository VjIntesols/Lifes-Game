<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/login_background"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Login"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/user_email_Ll"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textColorHint="@color/colorWhite"
            app:hintTextAppearance="@style/HintStyle">

            <android.support.design.widget.TextInputEditText
                android:background="@drawable/background_edittext"
                android:drawableEnd="@drawable/indicator_dot_grey"
                android:drawablePadding="16dp"
                android:drawableRight="@drawable/indicator_dot_grey"
                android:ellipsize="end"
                android:hint="Email"
                android:id="@+id/user_email"
                android:inputType="textEmailAddress"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:textColor="@color/colorWhite" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/user_password_Ll"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textColorHint="@color/colorWhite"
            app:hintTextAppearance="@style/HintStyle">

            <android.support.design.widget.TextInputEditText
                android:background="@drawable/background_edittext"
                android:drawableEnd="@drawable/indicator_dot_grey"
                android:drawablePadding="16dp"
                android:drawableRight="@drawable/check_mark"
                android:ellipsize="end"
                android:hint="Password"
                android:id="@+id/user_password"
                android:inputType="textPassword"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:textColor="@color/colorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/ButtonHolder"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:padding="20dp">

            <info.hoang8f.widget.FButton
                android:gravity="center"
                android:id="@+id/btn_user_accept_login_email_password"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="Login"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/fbutton_color_emerald" />

            <info.hoang8f.widget.FButton
                android:gravity="center"
                android:id="@+id/btn_user_cancel_login"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="Cancel"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/fbutton_color_alizarin" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border"
        android:clickable="true"
        android:id="@+id/forgot_password_Ll"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/forgot_password_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Forgot Password"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</RelativeLayout>